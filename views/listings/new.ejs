<% layout("/layouts/boilerplate") %>

	<div class="row mt-3 ">
		<div class="col-8 offset-2" >
		<h3>Create a new listing</h3>

		<form method="post" action="/listings">

			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input type="text" name="title" placeholder="Add a catchy title" class="form-control"> 
			</div>
			
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea name="description" rows="3" cols="10" id="" placeholder="Enter description" class="form-control"></textarea> 
			</div>
			
			<div class="mb-3">
				<label for="image" class="form-label">Image</label>
				<input type="text" name="image" placeholder="Enter image url" class="form-control"> 
			</div>

			<div class="row">
				<div class="mb-3 col-md-4">
				<label for="title" class="form-label">Price</label>
				<input type="text" name="price" placeholder="Eg. 1200" class="form-control"> 
			</div>

			<div class="mb-3 col-md-8">
				<label for="country" class="form-label">Country</label>
				<input type="text" name="country" placeholder="Eg. India" class="form-control">			
			</div>
			</div>

			<div class="mb-3">
				<label for="location" class="form-label">Location</label>
				<input type="text" name="location" placeholder="Eg. Maharashtra" class="form-control"> 
			</div>
			<button class="btn btn-dark add-btn mt-3">Add</button>
		</form>
		<br>
		</div>
		</div>
