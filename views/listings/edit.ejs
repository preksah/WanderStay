<% layout("/layouts/boilerplate") %>

	<div class="row mt-3">
		<div class="col-8 offset-2">
			<h3>Edit a listing</h3>
		<form method="POST" action="/listings/<%= findList._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data" >
			
			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input type="text" name="title" class="form-control" required value=<%= findList.title %> > 
				<div class="invalid-feedback">Title should be valid</div>			
			</div>

			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea name="description" class="form-control" required><%= findList.description %></textarea> 
				<div class="invalid-feedback">Please enter a short description</div>
			</div>
	

			<div class="mb-3">
				<h1>Original listing image</h1>
				<img src="<%= originalImg %>" style="height: 200px; width: 300px; border-radius: 5%;"	>			
			</div> 

			<div class="mb-3">
				<label for="image" class="form-label">Upload New Image</label>
				<input type="file" name="listing[image]" class="form-control"  value="<%= findList.image.url %>">
				<div class="invalid-feedback">Image url should be valid</div>
			</div>

			<div class="row">
				<div class="mb-3 col-md-4">
				<label for="price" class="form-label">Price</label>
				<input type="text" name="price" class="form-control" required value=<%= findList.price %>> 
				<div class="invalid-feedback">Price should be valid</div>
			</div>

				<div class="mb-3 col-md-8">
				<label for="country" class="form-label">Country</label>
				<input type="text" name="country" class="form-control" required value=<%= findList.country %>> 
				<div class="invalid-feedback">Country should be valid</div>	
			</div>
			</div>
			

			<div class="mb-3">
				<label for="location" class="form-label">Location</label>
				<input type="text" name="location" class="form-control" required value=<%= findList.location %>> 
				<div class="invalid-feedback">Location should be valid</div>
			</div>

			
			<button class="btn btn-dark edit-btn mb-3">Edit</button>
		</form>
		</div>
	</div>
<script src="/js/script.js"></script>