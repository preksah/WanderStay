<% layout("layouts/boilerplate") %>

<!-- listing==read -->

	<div class="row mt-3">
		<div class="col-8 offset-3">
			<h3><%= read.title %></h3>
		</div>

	
		<div class="card col-6 offset-3 show-card listing-card">
  <img src="<%= read.image.url %>" class="card-img-top show-img" alt="listing image">

  <div class="card-body">
    <p class="card-text">
      <i>Owned by <%= read.owner.username %></i><br><br>
      <%= read.description %><br>
      ₹ <%= read.price.toLocaleString("en-IN") %><br>
      <%= read.location %><br>
      <%= read.country %>
    </p>

    <% if(currUser && read.owner._id.equals(currUser._id)) { %>
      <div class="d-flex gap-2">
        <a href="/listings/<%= read._id %>/edit" class="btn btn-dark">Edit</a>

        <form method="post" action="/listings/<%= read._id %>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    <% } %>
  </div>
</div>


		
		<!-- Reviews -->
		<div class="col-8 offset-3 mb-3">
			<hr>
			<% if(currUser) {%>
			<h4>Leave a Review</h4>
			<form action="/listings/<%= read.id %>/reviews" method="post" novalidate class="needs-validation">
				<!-- <div class="mb-3 mt-3">
					<label for="rating" class="form-label">Rating</label>
					<input type="range" min="1" max="5" name="review[rating]" class="form-range"/>
				</div> -->
				<!-- stars -->
				<div class="mb-3 mt-4">
				<label for="rating" class="form-label">Rating</label>				
				 <fieldset class="starability-slot">
					<input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
					<input type="radio" id="first-rate1" name="review[rating]" value="1" />
					<label for="first-rate1" title="Terrible">1 star</label>
					<input type="radio" id="first-rate2" name="review[rating]" value="2" />
					<label for="first-rate2" title="Not good">2 stars</label>
					<input type="radio" id="first-rate3" name="review[rating]" value="3" />
					<label for="first-rate3" title="Average">3 stars</label>
					<input type="radio" id="first-rate4" name="review[rating]" value="4" />
					<label for="first-rate4" title="Very good">4 stars</label>
					<input type="radio" id="first-rate5" name="review[rating]" value="5" />
					<label for="first-rate5" title="Amazing">5 stars</label>
					</fieldset>
				</div>



				<div class="mb-3 mt-3">
					<label for="comment" class="form-label">Comments</label>
					<textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required ></textarea>
					<div class="invalid-feedback">Please add some comments for review</div>
				</div>
				<button class="btn btn-outline-dark">Submit</button>
			</form>
			<hr>
			<% } %>

		<% if(read.reviews.length>0){ %>	
			<!-- Show reviews -->
			<p><b>All Reviews</b></p>
			<div class="row">
			<% for(r of read.reviews){ %>
				<div class="card col-5 ms-3 mb-3 ">
					<div class="card-body">
						<div class="card-title"><h5>@<%= r.author.username%></h5></div>
						<p class="card-text"><%= r.comment %></p>
						 <p class="card-text starability-result" data-rating="<%= r.rating %>"></p>
					</div>
					<form class="mb-3 mt-3" method="post" action="/listings/<%= read.id %>/reviews/<%= r._id %>?_method=Delete">
						<button class=" btn btn-sm btn-dark">Delete</button>
					</form>
				</div>
			<% } %>
		</div>
		<% } %>

			
		</div>
		<div class="col-8 offset-3 mb-3">
			<h3>Location</h3>
			<div id="map" style="height: 300px; border-radius: 10px;"></div>

		</div>
	</div>
	<% if (read.geometry && read.geometry.lat && read.geometry.lng) { %>
	<script>
		const lat = Number("<%= read.geometry.lat %>");
		const lng = Number("<%= read.geometry.lng %>");

		const map = L.map('map').setView([lat, lng], 13);

		L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
			attribution: '© OpenStreetMap contributors'
		}).addTo(map);

		L.marker([lat, lng])
			.addTo(map)
			.bindPopup(`
    <strong><%= read.title %></strong><br>
    <%= read.location %>, <%= read.country %><br>
    ₹ <%= read.price %> / night
  `);
	</script>

<% } %>