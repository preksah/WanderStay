<% layout("layouts/boilerplate") %>

	<div class="row mt-3">
		<div class="col-8 offset-3">
			<h3>Listing Details</h3>
		</div>

	
		<div class="card col-6 offset-3 show-card">
			<img src="<%= read.image.url %>" class="card-img-top show-img" alt="listing image">
			<di class="card-body">
			<p class="card-text">
				<b><%= read.title %></b> <br>
				<%= read.description %> <br>
				&#8377; <%= read.price.toLocaleString("en-IN") %> <br>
				<%= read.location  %> <br>
				<%= read.country  %> <br>
			</p>

			<div class="btns">
			<form method="get" action="/listings/<%= read._id %>/edit">
				<button class="btn btn-dark offset-2 edit-btn">Edit</button>
			</form>
			<form method="post" action="/listings/<%= read._id %>?_method=Delete">
				<button class="btn btn-dark offset-4">Delete</button>
			</form>
		</div>
		</div>
		
	</div>
		
		
		

